<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
                name="user"
                type="com.smapl_android.model.UserInfo" />

        <variable
            name="car"
            type="com.smapl_android.model.CarInfoEditVM" />

        <variable
            name="presenter"
            type="com.smapl_android.ui.fragments.SetCarFragment.Presenter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:orientation="vertical">

        <com.smapl_android.ui.widgets.SimpleTopBar
                android:id="@+id/linear_edit_car_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                custom:leftText="@string/back"
                custom:centerText="@string/set_car"
                custom:rightText="@string/save"
                custom:leftClick="@{() -> presenter.onBackClicked()}"
                custom:rightClick="@{() -> presenter.onSaveClicked()}"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <com.smapl_android.ui.widgets.UserInfoBar
                    android:id="@+id/img_circle_set_car_photo"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    custom:leftSpace="6dp"
                    custom:userName="@{user.name}"
                    custom:carInfo="@{user.carBrandModel}"
                    custom:carPhoto="@{user.carPhoto}"/>

            <LinearLayout
                android:id="@+id/linear_set_car_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_line_background"
                android:paddingTop="@dimen/edit_password_edit_padding_top"
                android:layout_below="@id/img_circle_set_car_photo"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_car_brand"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/core_text_size" />

                <com.smapl_android.ui.widgets.AboutYourSelfSpinner
                    android:id="@+id/spinner_set_car_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    custom:items="@array/car_brand"
                    bind:selectedValue="@={car.carBrand}"/>

            </LinearLayout>

            <EditText
                android:id="@+id/edit_set_car_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear_set_car_brand"
                android:background="@drawable/edit_text_line_background"
                android:hint="@string/hint_car_model"
                android:text="@={car.carModel}"
                android:paddingTop="@dimen/edit_password_edit_padding_top"
                android:textSize="@dimen/core_text_size"
                android:textColorHint="@android:color/white" />

            <EditText
                android:id="@+id/edit_set_car_year_issue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_set_car_model"
                android:background="@drawable/edit_text_line_background"
                android:hint="@string/hint_car_year_issue"
                android:inputType="number"
                android:maxLength="4"
                android:text="@={car.carYear}"
                android:paddingTop="@dimen/edit_password_edit_padding_top"
                android:textSize="@dimen/core_text_size"
                android:textColorHint="@android:color/white" />

            <EditText
                android:id="@+id/edit_set_car_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_set_car_year_issue"
                android:paddingTop="@dimen/edit_password_edit_padding_top"
                android:background="@drawable/edit_text_line_background"
                android:hint="@string/hint_car_color"
                android:text="@={car.carColor}"
                android:textSize="@dimen/core_text_size"
                android:textColorHint="@android:color/white" />


        </RelativeLayout>

    </LinearLayout>
</layout>