<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
                name="user"
                type="com.smapl_android.model.LoginInfoViewModel"/>

        <variable
                name="presenter"
                type="com.smapl_android.ui.fragments.LoginMiniFragment.Presenter"/>
    </data>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_background_white_shape"
                android:paddingTop="20dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
        android:id="@+id/login_body">


            <EditText
                    android:id="@+id/edit_login"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_login_height"
                    android:drawableLeft="@drawable/vector_smart_object_6"
                    android:drawableRight="@{user.phoneValid}"
                    android:drawablePadding="10dp"
                    android:paddingLeft="6dp"
                    android:background="@drawable/edit_text_background"
                    android:hint="@string/input_phone"
                    android:inputType="phone"
                    android:text="@{user.phone}"
                    app:addTextChangedListener="@{user.phoneTextWatcher}"
                    android:textSize="@dimen/core_text_size"/>

            <EditText
                    android:layout_marginTop="30dp"
                    android:id="@+id/edit_password"
                    android:layout_below="@id/edit_login"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_login_height"
                    android:drawableLeft="@drawable/vector_smart_object_7"
                    android:drawableRight="@{user.passwordValid}"
                    android:background="@drawable/edit_text_background"
                    android:drawablePadding="10dp"
                    android:paddingLeft="6dp"
                    android:hint="@string/input_password"
                    android:inputType="textPassword"
                    android:textColorHint="@color/color_login_hint"
                    android:text="@{user.password}"
                    app:addTextChangedListener="@{user.passwordTextWatcher}"
                    android:imeOptions="actionSend"
                    android:textSize="@dimen/core_text_size"/>


            <Button
                    android:id="@+id/btn_login_forgot_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/edit_password"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="60dp"
                    android:background="@android:color/transparent"
                    android:text="@string/forgot_password"
                    android:textAllCaps="false"
                    android:textColor="@color/color_login_hint"
                    android:textSize="@dimen/core_text_size"/>

        </RelativeLayout>
        <ImageButton
                android:id="@+id/btn_login_forward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_below="@id/login_body"
                android:layout_marginTop="-30dp"
                android:layout_centerHorizontal="true"
                android:onClick="@{() -> presenter.onLoginClicked(user)}"
                android:src="@drawable/button_send"/>

    </RelativeLayout>
</layout>