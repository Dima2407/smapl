<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_smapl_background">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_map_car_photo"
        android:src="@drawable/audi"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_width="@dimen/image_car_circle_size"
        android:layout_height="@dimen/image_car_circle_size" />

    <TextView
        android:id="@+id/text_map_user_name"
        android:text="Дмитрий"
        android:textSize="@dimen/name_profile_size"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/img_map_car_photo"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="45dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_map_car_brand_model"
        android:text="Audi A6"
        android:textColor="@color/white"
        android:layout_below="@id/text_map_user_name"
        android:layout_alignLeft="@id/text_map_user_name"
        android:textSize="@dimen/car_brand_model_profile_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btn_map_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/img_circle_btn_start"
        android:text="@string/start"
        android:textSize="30dp"
        android:textAllCaps="false"
        android:textColor="@color/white" />

</RelativeLayout>