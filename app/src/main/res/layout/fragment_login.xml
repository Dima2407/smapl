<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="user"
            type="com.smapl_android.model.LoginInfo" />

        <variable
            name="presenter"
            type="com.smapl_android.ui.fragments.LoginFragment.Presenter" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img_login_logotip"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/logotip" />

        <LinearLayout
            android:id="@+id/linear_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_login_logotip"
            android:orientation="horizontal"
            android:weightSum="2">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <RadioButton
                    android:id="@+id/btn_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:button="@color/transparent"
                    android:drawableBottom="@drawable/selector_btns_login_background"
                    android:onClick="@{() -> presenter.onLoginClicked(user)}"
                    android:text="@string/login"
                    android:checked="true"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/login_btn_checked"
                    android:textSize="@dimen/btn_text_size" />

                <RadioButton
                    android:id="@+id/btn_go_to_registration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:button="@color/transparent"
                    android:drawableBottom="@drawable/selector_btns_login_background"
                    android:onClick="@{() -> presenter.onRegistrationClicked()}"
                    android:text="@string/registration"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/btn_text_size" />

            </RadioGroup>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relative_login_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/linear_buttons"
            android:background="@color/grey"
            android:padding="@dimen/padding_frame">

        </RelativeLayout>
    </RelativeLayout>
</layout>