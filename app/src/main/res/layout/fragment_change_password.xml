<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_smapl_background">

    <LinearLayout
        android:id="@+id/linear_change_password_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_set_car_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="@string/back"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@color/transparent"
            android:paddingTop="14dp"
            android:text="@string/change_password_password"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_set_car_forward"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="@string/save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linear_change_password_menu"
        android:layout_margin="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_circle_change_password_photo"
            android:src="@drawable/audi"
            android:layout_width="@dimen/image_car_circle_size"
            android:layout_height="@dimen/image_car_circle_size" />

        <TextView
            android:id="@+id/text_change_password_name"
            android:text="Дмитрий"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/img_circle_change_password_photo"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_change_password_car_brand_model"
            android:text="Audi A6"
            android:textColor="@color/white"
            android:layout_below="@id/text_change_password_name"
            android:layout_alignLeft="@id/text_change_password_name"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_change_password_brand"
            android:layout_below="@id/img_circle_change_password_photo"
            android:layout_marginTop="30dp"
            android:hint="@string/hint_old_password"
            android:background="@drawable/edit_text_line_background"
            android:textColorHint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edit_change_password_model"
            android:layout_below="@id/edit_change_password_brand"
            android:hint="@string/hint_new_password"
            android:background="@drawable/edit_text_line_background"
            android:textColorHint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</RelativeLayout>