<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="user"
            type="com.smapl_android.model.UserInfo" />

        <variable
            name="presenter"
            type="com.smapl_android.ui.fragments.MapFragment.Presenter" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_smapl_background">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_map_car_photo"
            android:layout_width="@dimen/image_car_circle_size"
            android:layout_height="@dimen/image_car_circle_size"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/audi" />

        <TextView
            android:id="@+id/text_map_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="45dp"
            android:layout_toRightOf="@id/img_map_car_photo"
            android:text="@{user.name}"
            android:textColor="@android:color/white"
            android:textSize="@dimen/name_profile_size" />

        <TextView
            android:id="@+id/text_map_car_brand_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/text_map_user_name"
            android:layout_below="@id/text_map_user_name"
            android:text="@{user.carBrand + ' ' + user.carModel}"
            android:textColor="@android:color/white"
            android:textSize="@dimen/car_brand_model_profile_size" />


        <Button
            android:id="@+id/btn_map_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/img_circle_btn_start"
            android:text="@string/start"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="27sp" />

    </RelativeLayout>
</layout>